<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel-heading">
    <%= post.user.display_name %>
  </div>
  <div class="panel-body">
    <span id="post-thumbsup-<%= post.id %>" class="label label-success">
      <%= post.likes.count %> üëç
    </span>
    <%= post.content %>

    <div class="text-right">

    <!-- ÊåâËµûÂäüËÉΩ -->

      <span id="post-like-<%= post.id %>">
        <%= render :partial => "like", :locals => { :post => post} %>
      </span>


    <!-- Êî∂ËóèÂäüËÉΩ -->

      <span id="post-collection-<%= post.id %>">
        <%= render :partial => "collection", :locals => { :post => post} %>
      </span>


      <% if current_user && post.user == current_user %>
          <%= link_to "Delete", post_path(post), :method => :delete, :remote => true, :class => "btn btn-danger" %>
      <% end %>


    </div>

  </div>
</div>
