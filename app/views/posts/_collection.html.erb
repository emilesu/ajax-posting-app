<% if current_user # 登录才可以点赞 %>
  <% if post.find_collection(current_user) %>
    <%= link_to uncollection_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" do%><i class="fa fa-heart" aria-hidden="true"></i><% end %>
  <% else %>
    <%= link_to collection_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" do%><i class="fa fa-heart-o" aria-hidden="true"></i><% end %>
  <% end %>
<% end %>
